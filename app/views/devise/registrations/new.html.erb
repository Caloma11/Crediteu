

<% if params[:is_company].present? %>

  <div class="company-signup-form">
  <%= render "shared/navbar_transparent" %>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
    <div class="new-company-and-investor">
      <div class="signup-form">

        <div class="form-inputs">
          <%= f.input :email, placeholder: 'email', label: false, required: true, autofocus: true %>
          <%= f.input :password, placeholder: 'nova senha', label: false, required: true %>
          <%= f.input :is_company, as: :hidden, input_html: { value: true } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Cadastre-se", class: 'btn btn-success btn-block btn-lg' %>
        </div>

      </div>


      <div class="company-pitch">
        <h4>
         Peça emprestimo para finaciar o seu negócio e aproveite juros muito abaixo do mercado
        </h4>
        <%= link_to "Simule o empréstimo", pages_simulation_path, class: 'btn btn-success btn-lg' %>
      </div>
    </div>

  </div>

<% end %>
  </div>

<% else %>

  <div class="container-signup-investor">
    <%= render "shared/navbar_transparent" %>


    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

    <div class="new-company-and-investor">
      <div class="signup-form">
        <div class="form-inputs">
          <%= f.input :email, placeholder: 'email', label: false, required: true, autofocus: true %>
          <%= f.input :password, placeholder: 'nova senha', label: false, required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Cadastre-se", class: 'btn btn-success btn-block btn-lg' %>
        </div>
        <% end %>

      </div>

      <div class="investor-pitch">
        <h4>
           Ajude pequenas empresas a crescer através de investimentos com rendimento acima do mercado
        </h4>
      </div>
    </div>
  </div>
<% end %>
